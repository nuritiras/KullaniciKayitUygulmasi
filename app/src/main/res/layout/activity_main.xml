<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.MainActivity">
   
   <FrameLayout
       android:layout_width="match_parent"
       android:id="@+id/main_activity_frameLayout"
       android:layout_above="@id/main_activity_bottomView"
       android:layout_height="match_parent"/>



   <com.google.android.material.bottomnavigation.BottomNavigationView
       android:layout_width="match_parent"
       android:layout_height="56dp"
       app:menu="@menu/bottom_nav_view"
       android:id="@+id/main_activity_bottomView"
       app:itemIconTint="@color/design_default_color_secondary_variant"
       app:itemTextColor="@color/design_default_color_secondary_variant"
       android:layout_alignParentBottom="true" />



</RelativeLayout>