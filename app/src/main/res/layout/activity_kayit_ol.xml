<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".Controller.KayitOlActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kayıt Ol"
        android:textSize="27sp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"/>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        android:id="@+id/kayit_ol_inputIsim"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:hint="İsminizi Giriniz:"
            android:id="@+id/kayit_ol_editIsim"
            android:inputType="textPersonName"
            android:maxLength="20"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        app:counterEnabled="true"
        app:counterMaxLength="35"
        android:layout_marginTop="15dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        android:id="@+id/kayit_ol_inputEmail"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:hint="E-Postanızı Giriniz:"
            android:id="@+id/kayit_ol_editEmail"
            android:inputType="textEmailAddress"
            android:maxLength="35"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        android:layout_marginTop="15dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        android:id="@+id/kayit_ol_inputSifre"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:hint="Şifrenizi Giriniz:"
            android:id="@+id/kayit_ol_editSifre"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        android:layout_marginTop="15dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        android:id="@+id/kayit_ol_inputSifreTekrar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:hint="Şifrenizi Onaylayınız:"
            android:id="@+id/kayit_ol_editSifreTekrar"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonnKayitOl"
        android:text="Kayıt Ol"
        android:onClick="btnKayitOl"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textSize="19sp"
        android:textStyle="bold"
        android:background="@drawable/kayit_ol_giris_yap_btn_bg"
        android:layout_width="250dp"
        android:layout_height="55dp"/>

</LinearLayout>